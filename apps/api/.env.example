# Database Configuration
DATABASE_URL=postgresql://finops:finops_password@localhost:5432/finops_db?schema=public

# JWT Secret (generate a random string, at least 32 characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=

# Stripe Configuration (Required for subscription features)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PRICE_ID=
STRIPE_WEBHOOK_SECRET=

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Optional: AWS Credentials (if not using default credential chain)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_SESSION_TOKEN=your_aws_session_token

# Optional: Mock AWS mode for testing (set to 'true' to enable)
# MOCK_AWS=false

# Optional: Server Configuration (defaults shown)
# NODE_ENV=development
# PORT=3000
# HOST=0.0.0.0
# LOG_LEVEL=info
